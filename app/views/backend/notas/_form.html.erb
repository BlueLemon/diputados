<%= simple_form_for  [:backend, resource] do |f| %>
  <%= f.input :numero, :label =>"Numero" %>
  <%= f.input :autor %>
  <%= f.simple_fields_for :pases do |pases_form| %>
    <%= pases_form.association :area, input_html: {class: 'select2'} %>
    <%= pases_form.association :session, input_html: {class: 'select2'} %>
    <%= pases_form.input :ingreso, as: :date_picker %>
    <%= pases_form.input :fojas %>
  <% end %>
  <%= f.association :tags, input_html: {multiple: true, class: 'chzn-select',
      "data-pre"  => f.object.tags.to_json(methods: :name), only: [:id, :name]} %>
<br>
<%= f.submit %>
<% end %>
