<%= image_tag "headermantis.png" %>
<div class="border-form-div">
  <h2>Conexión</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal' }) do |f|%>
    <div class="border-form-div form-inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, label: "Contraseña", :required => false %>
      <%= f.input :remember_me, label: "Recordarme", :as => :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Login' %>
    </div>
  <% end %>

  <%= render 'backend/shared/links' %>
</div>

<div class="span3">
</div>
