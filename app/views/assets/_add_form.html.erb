<%= semantic_form_for asset do |f| %>

  <%= f.inputs do %>
    <%= f.input :asset %>
    <%= f.input :adjuntable_id, :as => :hidden %>
    <%= f.input :adjuntable_type, :as => :hidden %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>

<% end %>

