<% if can? :manage, Asset %>
  <%= semantic_form_for Asset.new, :url => admin_assets_path do |f| %>
    <%= f.inputs do %>
      <%= f.input( :asset, :as => :file ) %>
      <%= f.input( :adjuntable_id, :input_html => {:value => expediente.id}, :as => :hidden) %>
      <%= f.input( :adjuntable_type, :input_html => {:value => "Expediente"}, :as => :hidden) %>
    <% end %>
    <%= f.buttons %>
  <% end %>
<% end %>

